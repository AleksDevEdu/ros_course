  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.1"/>
      </geometry>
    </visual>
  </link>

  <xacro:steering_wheel name="right_steer_wheel" chassis_name="base_link" xyz="0.25 -0.25 0" />
  <xacro:steering_wheel name="left_steer_wheel" chassis_name="base_link" xyz="0.25 0.25 0" />

  <xacro:traveling_wheel name="right_travel_wheel" chassis_name="base_link" xyz="-0.25 -0.25 0" />
  <xacro:traveling_wheel name="left_travel_wheel" chassis_name="base_link" xyz="-0.25 0.25 0" />


</robot>
