<launch>
  <!-- Turtlesim Node-->
  <node pkg="turtlesim" type="turtlesim_node" name="sim"/>

  <node pkg="turtlesim" type="turtle_teleop_key" name="teleop" output="screen"/>
  <!-- Axes -->
  <param name="scale_linear" value="2" type="double"/>
  <param name="scale_angular" value="2" type="double"/>

  <node pkg="tf_sample_test_package" type="turtle_tf_broadcaster"
        args="/turtle1" name="turtle1_tf_broadcaster" />
  <node pkg="tf_sample_test_package" type="turtle_tf_broadcaster"
        args="/turtle2" name="turtle2_tf_broadcaster" />

  <node pkg="tf_sample_test_package" type="turtle_tf_listener" name="turtle_tf_listener" />
  <node pkg="tf_sample_test_package" type="frame_tf_broadcaster" name="frame_tf_broadcaster" />

</launch>
